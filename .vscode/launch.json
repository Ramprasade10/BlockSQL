    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
                    "name": "Flask",
                    "type": "python",
                    "request": "launch",
                    "stopOnEntry": false,
                    "pythonPath": "${config.python.pythonPath}",
                    "program": "C:\\ProgramData\\Anaconda3\\Scripts\\flask.exe",
                    "env": {
                        "FLASK_APP": "app.py"
                    },
                    "args": [
                        "run",
                        "--no-debugger",
                        "--no-reload"
                    ],
                    "debugOptions": [
                        "WaitOnAbnormalExit",
                        "WaitOnNormalExit",
                        "RedirectOutput"
                    ]
                }
            ]
}